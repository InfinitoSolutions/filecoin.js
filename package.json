{
  "name": "filecoin.js",
  "version": "0.0.1",
  "description": "A JavaScript/TypeScript client library for Filecoin.io",
  "main": "dist/index.js",
  "browser": {
    "node-fetch": false
  },
  "typings": "dist/filecoin.js.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && tsc -m es6 --outDir dist-esm",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "doc": "node scripts/make-docs.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "fs-extra": "^9.0.1",
    "node-fetch": "^2.6.0",
    "rpc-websockets": "^5.2.2",
    "websocket": "^1.0.31"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.8.21",
    "@microsoft/api-extractor": "^7.9.2",
    "@types/jest": "25.2.3",
    "@types/node-fetch": "^2.5.7",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-tsdoc": "^0.2.6",
    "jest": "^26.1.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
