{
  "name": "filecoin.js",
  "version": "0.0.1",
  "description": "A JavaScript/TypeScript client library for Filecoin.io",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "jsnext:main": "dist-esm/index.js",
  "module": "dist-esm/index.js",
  "browser": {
    "node-fetch": false
  },
  "files": [
    "/dist",
    "/dist-esm"
  ],
  "scripts": {
    "prebuild": "rimraf dist dist-esm dist-tests",
    "build": "tsc && tsc -m es6 --outDir dist-esm",
    "_build_tests": "npm run prebuild && tsc --project tsconfig.tests.json",
    "prebundle": "rimraf _bundles",
    "bundle": "webpack",
    "_bundle-tests": "webpack --config webpack.tests.config.js",
    "_test-browser-umd": "karma start --single-run --browsers HeadlessLittleLiar karma-umd.conf.js",
    "_test-node": "mocha --no-colors --reporter ./tests/reporter ./dist-tests/tests/src.ts/test-*.js",
    "test-browser-umd": "npm run _build_tests && npm run _bundle-tests && npm run _test-browser-umd",
    "test": "npm run _build_tests && npm run _test-node",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "doc": "node scripts/make-docs.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ledgerhq/hw-transport-webusb": "^5.22.0",
    "@zondax/filecoin-signing-tools": "^0.6.3",
    "axios": "^0.19.2",
    "bignumber.js": "^9.0.0",
    "btoa-lite": "^1.0.0",
    "fs-extra": "^9.0.1",
    "node-fetch": "^2.6.0",
    "rpc-websockets": "^5.3.1",
    "secp256k1": "^4.0.2",
    "webpack": "^4.44.1",
    "websocket": "^1.0.31"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.8.21",
    "@microsoft/api-extractor": "^7.9.2",
    "@types/assert": "^1.4.1",
    "@types/btoa-lite": "^1.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/ledgerhq__hw-transport-webusb": "^4.70.0",
    "@types/mocha": "^5.2.0",
    "@types/node": "^12.7.4",
    "@types/node-fetch": "^2.5.7",
    "@types/supertest": "^2.0.8",
    "@types/websocket": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "dotenv": "^8.2.0",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-tsdoc": "^0.2.6",
    "karma": "5.1.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-mocha": "2.0.1",
    "mocha": "^7.1.1",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7",
    "webpack-cli": "^3.3.12"
  }
}
